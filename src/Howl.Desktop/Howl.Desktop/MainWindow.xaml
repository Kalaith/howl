<Window x:Class="Howl.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Howl.Desktop"
        mc:Ignorable="d"
        Title="Howl - Record once. Let Howl explain it."
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#95a5a6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#e74c3c"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#c0392b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Howl"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="#2c3e50"/>
            <TextBlock Text="Record once. Let Howl explain it."
                       FontSize="14"
                       Foreground="#7f8c8d"
                       Margin="0,5,0,0"/>

            <!-- API Key Section -->
            <Border x:Name="ApiKeyBorder"
                    Background="#fff3cd"
                    BorderBrush="#ffc107"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="12"
                    Margin="0,15,0,0"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Gemini API Key:"
                               VerticalAlignment="Center"
                               FontSize="12"
                               Foreground="#856404"
                               Margin="0,0,10,0"/>

                    <Grid Grid.Column="1">
                        <PasswordBox x:Name="ApiKeyPasswordBox"
                                     VerticalAlignment="Center"
                                     FontSize="12"
                                     Padding="6"
                                     PasswordChar="•"
                                     Visibility="Visible"/>

                        <TextBox x:Name="ApiKeyTextBox"
                                 VerticalAlignment="Center"
                                 FontSize="12"
                                 Padding="6"
                                 Visibility="Collapsed"/>
                    </Grid>

                    <Button x:Name="ToggleApiKeyButton"
                            Grid.Column="2"
                            Content="👁"
                            Click="ToggleApiKeyButton_Click"
                            Background="Transparent"
                            Foreground="#856404"
                            FontSize="14"
                            Padding="8,6"
                            Margin="5,0,0,0"
                            BorderThickness="1"
                            BorderBrush="#ffc107"
                            Cursor="Hand"
                            ToolTip="Show/Hide API Key">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#ffe69c"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button x:Name="SaveApiKeyButton"
                            Grid.Column="3"
                            Content="Save"
                            Click="SaveApiKeyButton_Click"
                            Background="#28a745"
                            Foreground="White"
                            FontSize="11"
                            Padding="12,6"
                            Margin="5,0,0,0"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="3"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#218838"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- API Key Status -->
            <TextBlock x:Name="ApiKeyStatusText"
                       FontSize="11"
                       Foreground="#27ae60"
                       Margin="0,8,0,0"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Status Card -->
        <Border Grid.Row="1"
                Background="#ecf0f1"
                BorderBrush="#bdc3c7"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Status"
                           FontWeight="Bold"
                           FontSize="14"
                           Foreground="#34495e"
                           Margin="0,0,0,10"/>
                <TextBlock x:Name="StatusTextBlock"
                           Text="Ready to record"
                           FontSize="13"
                           Foreground="#2c3e50"/>
                <TextBlock x:Name="RecordingTimeTextBlock"
                           Text=""
                           FontSize="12"
                           Foreground="#7f8c8d"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Progress Area -->
        <Border Grid.Row="2"
                Background="White"
                BorderBrush="#ddd"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="ProgressTextBlock"
                           Text=""
                           FontSize="12"
                           Foreground="#555"
                           TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>

        <!-- Control Buttons -->
        <StackPanel Grid.Row="3" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button x:Name="StartButton"
                        Content="Start Recording"
                        Style="{StaticResource PrimaryButton}"
                        Click="StartButton_Click"
                        Width="200"
                        Margin="0,0,10,0"/>
                <Button x:Name="StopButton"
                        Content="Stop Recording"
                        Style="{StaticResource DangerButton}"
                        Click="StopButton_Click"
                        Width="200"
                        IsEnabled="False"/>
            </StackPanel>

            <!-- AI Provider Selection -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                <TextBlock Text="AI Provider:"
                           FontSize="12"
                           Foreground="#7f8c8d"
                           VerticalAlignment="Center"
                           Margin="0,0,15,0"/>
                <RadioButton x:Name="LMStudioRadioButton"
                             Content="LM Studio (Local)"
                             FontSize="12"
                             Foreground="#2c3e50"
                             IsChecked="True"
                             GroupName="AIProvider"
                             Margin="0,0,15,0"
                             Checked="AIProviderChanged">
                    <RadioButton.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Use local LM Studio at http://127.0.0.1:1234&#x0a;No API key required, runs on your machine"/>
                        </ToolTip>
                    </RadioButton.ToolTip>
                </RadioButton>
                <RadioButton x:Name="GeminiRadioButton"
                             Content="Gemini (Cloud)"
                             FontSize="12"
                             Foreground="#2c3e50"
                             GroupName="AIProvider"
                             Checked="AIProviderChanged">
                    <RadioButton.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Use Google Gemini API&#x0a;Requires API key"/>
                        </ToolTip>
                    </RadioButton.ToolTip>
                </RadioButton>
            </StackPanel>

            <!-- Model Selection (LM Studio only) -->
            <StackPanel x:Name="ModelSelectionPanel"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"
                        Visibility="Visible">
                <TextBlock Text="Model:"
                           FontSize="12"
                           Foreground="#7f8c8d"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <ComboBox x:Name="ModelComboBox"
                          Width="300"
                          FontSize="12"
                          SelectionChanged="ModelComboBox_SelectionChanged">
                    <ComboBox.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Select which model to use from LM Studio"/>
                        </ToolTip>
                    </ComboBox.ToolTip>
                </ComboBox>
                <Button x:Name="RefreshModelsButton"
                        Content="🔄"
                        FontSize="14"
                        Padding="8,4"
                        Margin="8,0,0,0"
                        Background="#f0f0f0"
                        BorderThickness="1"
                        BorderBrush="#bdc3c7"
                        Cursor="Hand"
                        Click="RefreshModelsButton_Click">
                    <Button.ToolTip>
                        <ToolTip>
                            <TextBlock Text="Refresh available models from LM Studio"/>
                        </ToolTip>
                    </Button.ToolTip>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#e0e0e0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Debug Mode Checkbox -->
            <CheckBox x:Name="DebugModeCheckBox"
                      Content="Debug Mode (Skip AI - Export prompt only)"
                      HorizontalAlignment="Center"
                      Margin="0,10,0,0"
                      FontSize="12"
                      Foreground="#7f8c8d"
                      Checked="DebugModeCheckBox_Changed"
                      Unchecked="DebugModeCheckBox_Changed">
                <CheckBox.ToolTip>
                    <ToolTip>
                        <TextBlock Text="When enabled, skips the AI call and exports&#x0a;the prompt that would be sent. Useful for testing."/>
                    </ToolTip>
                </CheckBox.ToolTip>
            </CheckBox>
        </StackPanel>

        <!-- Footer -->
        <TextBlock Grid.Row="4"
                   x:Name="FooterTextBlock"
                   Text="API key optional - Enter above or use Debug Mode"
                   FontSize="11"
                   Foreground="#95a5a6"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,0"/>
    </Grid>
</Window>
